<?xml version="1.0" encoding="utf-8"?>
<!--suppress CheckTagEmptyBody -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >
        <TextView
            android:id="@+id/stock_messagebar"
            style="@style/messagebar"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/stock_buttons_linearlayout"
        style="@style/standard_linearlayout"
        android:paddingTop="@dimen/activity_vertical_margin">
        <TextView
            android:id="@+id/stock_savebutton"
            style="@style/actionbutton"
            android:layout_weight="18"
            android:text="@string/savebutton"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/stock_donebutton"
            style="@style/actionbutton"
            android:layout_weight="18"
            android:text="@string/donebutton"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="62"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/inputstockshop_linearlayout"
        style="@style/standard_linearlayout"
        >
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/inputstockshop_label"
            style="@style/inputitemlabel_primary"
            android:layout_weight="16"
            android:text="@string/shoplabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <Spinner
            android:id="@+id/selectstockshop"
            style="@style/spinner_selector"
            android:layout_weight="80"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/inputstockaisle_linearlayout"
        style="@style/standard_linearlayout"
        >
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/inputstockaisle_label"
            style="@style/inputitemlabel_primary"
            android:layout_weight="16"
            android:text="@string/aislelabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <Spinner
            android:id="@+id/selectstockaisle"
            style="@style/spinner_selector"
            android:layout_weight="80"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/stock_productfilter_linearlayout"
        style="@style/standard_linearlayout"
        >
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/products_productfilterlabel"
            style="@style/inputitemlabel_primary"
            android:layout_weight="16"
            android:text="@string/filterlabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <EditText
            android:id="@+id/products_inputfilter"
            style="@style/inputitem"
            android:layout_weight="80"
            android:inputType="textNoSuggestions"
            android:hint="@string/empty"
            android:autofillHints="@string/empty"
            tools:targetApi="o" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/inputstockproduct_linearlayout"
        style="@style/standard_linearlayout"
        >
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/inputstockproduct_label"
            style="@style/inputitemlabel_primary"
            android:layout_weight="16"
            android:text="@string/productlabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <Spinner
            android:id="@+id/selectstockproduct"
            style="@style/spinner_selector"
            android:layout_weight="80"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/inputstockcost_linearlayout"
        style="@style/standard_linearlayout"
        >
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/inputstockcost_label"
            style="@style/inputitemlabel_primary"
            android:layout_weight="16"
            android:text="@string/costlabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <EditText
            android:id="@+id/inputstockcost"
            style="@style/inputitem_monetary"
            android:layout_weight="16"
            android:hint="@string/empty"
            android:autofillHints="@string/empty"
            android:inputType="text"
            tools:targetApi="o" />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/inputstockorder_label"
            style="@style/inputitemlabel_primary"
            android:layout_weight="16"
            android:text="@string/orderlabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <EditText
            android:id="@+id/inputstockorder"
            style="@style/inputitem_order"
            android:layout_weight="10"
            android:inputType="text"
            android:hint="@string/empty"
            android:autofillHints="@string/empty"
            tools:targetApi="o" />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="34"
            />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/inputstockchecklist_linearlayout"
            style="@style/standard_linearlayout">
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/inputchecklistflag_label"
            style="@style/inputitemlabel_primary"
            android:layout_weight="16"
            android:text="@string/checklistflaglabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <CheckBox
            android:id="@+id/inputchecklistflag"
            style="@style/checkbox"
            android:layout_weight="16"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/inputchecklistcount_label"
            style="@style/inputitemlabel_primary"
            android:layout_weight="16"
            android:text="@string/stocklevellabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <EditText
            android:id="@+id/inputchecklistcount"
            style="@style/inputitem_order"
            android:layout_weight="6"
            android:inputType="text"
            android:hint="@string/empty"
            android:autofillHints="@string/empty"
            tools:targetApi="o" />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="38"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/stock_stocklist_heading"
        style="@style/listview_heading_standard"
        >
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/stock_stocklist_heading_productname"
            style="@style/listview_heading_col_standard"
            android:layout_weight="68"
            android:text="@string/productlabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/stock_stocklist_heading_productcost"
            style="@style/listview_heading_col_standard"
            android:layout_weight="14"
            android:text="@string/costlabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/stock_stocklist_heading_productorder"
            style="@style/listview_heading_col_standard"
            android:layout_weight="8"
            android:text="@string/orderlabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
    </LinearLayout>
    <include layout="@layout/common_listviewoptions"></include>
    <ListView
        android:id="@+id/stock_stocklist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </ListView>
</LinearLayout>