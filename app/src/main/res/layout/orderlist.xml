<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/orderlist_listview"
        style="@style/listviewrow_standard"
        >
        <TextView
            style="@style/listviewrowcol_standard"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/orderlist_productname"
            style="@style/listviewrowcol_standard"
            android:layout_weight="24"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"/>
        <TextView
            style="@style/listviewrowcol_standard"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/orderlist_shopname"
            style="@style/listviewrowcol_standard"
            android:layout_weight="24"
            />
        <TextView
            style="@style/listviewrowcol_standard"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/orderlist_aislename"
            style="@style/listviewrowcol_standard"
            android:layout_weight="24"
            />
        <TextView
            style="@style/listviewrowcol_standard"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/orderlist_price"
            style="@style/listviewrowcol_monetary"
            android:layout_weight="18"
            />
        <TextView
            style="@style/listviewrowcol_standard"
            android:layout_weight="2"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/orderlist_row2_listview"
        style="@style/listviewrow_standard"
        >
        <TextView
            style="@style/listviewrowcol_standard"
            android:layout_weight="4"
            />
        <TextView
            android:id="@+id/orderlist_stocklevel_label"
            style="@style/inputitemlabel"
            android:text="@string/inshoppinglist"
            android:layout_weight="12"
            />
        <TextView
            android:id="@+id/orderlist_numberinshop"
            style="@style/listviewrowcol_standard"
            android:layout_weight="8"
            />
        <TextView
            style="@style/listviewrowcol_standard"
            android:layout_weight="46"
            />
        <TextView
            android:id="@+id/orderlist_order1_button"
            style="@style/listviewrowactionbutton"
            android:layout_weight="13"
            android:text="@string/addbutton"/>
        <TextView
            style="@style/listviewrowcol_standard"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/orderlist_less1_button"
            style="@style/listviewrowactionbutton"
            android:layout_weight="13"
            android:text="@string/lessbutton"/>
        <TextView
            style="@style/listviewrowcol_standard"
            android:layout_weight="2"
            />
    </LinearLayout>
</LinearLayout>