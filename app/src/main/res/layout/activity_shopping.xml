<?xml version="1.0" encoding="utf-8"?>
<!--suppress CheckTagEmptyBody -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/colourswatch"></include>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >
        <TextView
            android:id="@+id/shopping_messagebar"
            style="@style/messagebar"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/actions"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        >
        <TextView
            android:id="@+id/shopping_donebutton"
            android:layout_weight="0.185"
            style="@style/actionbutton"
            android:text="@string/donebutton"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.025"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/shopping_tidybutton"
            android:layout_weight="0.185"
            style="@style/actionbutton"
            android:text="@string/tidybutton"
            />
        <TextView
            android:layout_weight="0.605"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shopping_shoppinglistinfo_heading"
        style="@style/listview_heading_standard"
        >
        <TextView
            style="@style/listview_heading_col_standard"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/shopping_shoppinglist_totalcost_label"
            style="@style/listview_heading_col_standard"
            android:layout_weight="14"
            android:text="@string/totalcostlabel"
            />
        <TextView
            android:id="@+id/shopping_shoppinglist_totalcost"
            style="@style/listview_heading_col_monetary"
            android:layout_weight="14"
            />
        <TextView
            style="@style/listview_heading_col_standard"
            android:layout_weight="5"
            />
        <TextView
            android:id="@+id/shopping_shoppinglist_remainingcost_label"
            style="@style/listview_heading_col_standard"
            android:layout_weight="14"
            android:text="@string/remainingcostlabel"
            />
        <TextView
            android:id="@+id/shopping_shoppinglist_remainingcost"
            style="@style/listview_heading_col_monetary"
            android:layout_weight="14"
            />
        <TextView
            style="@style/listview_heading_col_standard"
            android:layout_weight="5"
            />
        <TextView
            android:id="@+id/shopping_shoppinglist_spent_label"
            style="@style/listview_heading_col_standard"
            android:layout_weight="14"
            android:text="@string/spentlabel"
            />
        <TextView
            android:id="@+id/shopping_shoppinglist_spent"
            style="@style/listview_heading_col_monetary"
            android:layout_weight="14"
            />
        <TextView
            style="@style/listview_heading_col_standard"
            android:layout_weight="4"
            />
    </LinearLayout>
    <include layout="@layout/common_listviewoptions"></include>
    <ListView
        android:id="@+id/shopping_shoppinglist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </ListView>
</LinearLayout>