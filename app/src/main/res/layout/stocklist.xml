<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/stocklist_listview"
        style="@style/listviewrow_standard"
        >
        <include layout="@layout/rowindicatorcolumn">
        </include>
        <TextView
            android:id="@+id/stocklist_productname"
            style="@style/listviewrowcol_standard"
            android:layout_weight="70"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/stocklist_cost"
            style="@style/listviewrowcol_monetary"
            android:layout_weight="14"
            android:gravity="end"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/stocklist_order"
            style="@style/listviewrowcol_standard"
            android:layout_weight="8"
            android:gravity="end"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
    </LinearLayout>
</LinearLayout>