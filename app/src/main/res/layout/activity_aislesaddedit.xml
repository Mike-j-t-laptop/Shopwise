<?xml version="1.0" encoding="utf-8"?>
<!--suppress CheckTagEmptyBody -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >
        <TextView
            android:id="@+id/aislesaddedit_messagebar"
            style="@style/messagebar"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/standard_linearlayout"
        android:id="@+id/inputaisleshop_linearlayout"
        >
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/inputaisleshop_label"
            style="@style/inputitemlabel_primary"
            android:layout_weight="16"
            android:text="@string/shoplabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <Spinner
            android:id="@+id/selectaisleshop"
            style="@style/spinner_selector"
            android:layout_weight="80"
        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/inputaislename_linearlayout"
        style="@style/standard_linearlayout"
        >
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/inputaislename_label"
            style="@style/inputitemlabel_primary"
            android:layout_weight="16"
            android:text="@string/aislenamelabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <EditText
            android:id="@+id/inputaislename"
            style="@style/inputitem"
            android:layout_weight="80"
            android:hint="@string/empty"
            android:autofillHints="@string/empty"
            android:inputType="text"
            tools:targetApi="o" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/inputaisleorder_linearlayout"
        style="@style/standard_linearlayout">
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/inputaisleorder_label"
            style="@style/inputitemlabel_primary"
            android:layout_weight="16"
            android:text="@string/orderlabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <EditText
            android:id="@+id/inputaisleorder"
            style="@style/inputitem_order"
            android:layout_weight="10"
            android:hint="@string/empty"
            android:autofillHints="@string/empty"
            android:inputType="text"
            tools:targetApi="o" />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="70"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/standard_linearlayout"
        >
    </LinearLayout>
    <LinearLayout
        android:id="@+id/aisleaddedit_buttons_linearlayout"
        style="@style/standard_linearlayout">

        <TextView
            android:id="@+id/aisleaddedit_savebutton"
            style="@style/actionbutton"
            android:layout_weight="18"
            android:text="@string/savebutton"
            />

        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/aisleaddedit_donebutton"
            style="@style/actionbutton"
            android:layout_weight="18"
            android:text="@string/donebutton"
            />

        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="62"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/aisleaddedit_aislelist_heading"
        style="@style/listview_heading_standard"
        >
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/aisleaddedit_aislelist_heading_aislename"
            style="@style/listview_heading_col_standard"
            android:layout_weight="86"
            android:text="@string/aislelabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/aisleaddedit_aislelist_heading_aisleorder"
            style="@style/listview_heading_col_standard"
            android:layout_weight="8"
            android:text="@string/orderlabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
    </LinearLayout>
    <include layout="@layout/common_listviewoptions"></include>
    <ListView
        android:id="@+id/aisleaddedit_aislelist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </ListView>
</LinearLayout>