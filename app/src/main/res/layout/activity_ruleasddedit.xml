<?xml version="1.0" encoding="utf-8"?>
<!--suppress CheckTagEmptyBody -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >
        <TextView
            android:id="@+id/rulesaddedit_messagebar"
            style="@style/messagebar"
            />
    </LinearLayout>
    <!-- Note spinner adpaters as per StockAddActivity so using the same id's
            as per StockAddActivity
    -->
    <LinearLayout
        android:id="@+id/ruleaddedit_buttons_linearlayout"
        style="@style/standard_linearlayout"
        >
        <TextView
            android:id="@+id/rulesaddedit_savebutton"
            style="@style/actionbutton"
            android:layout_weight="18"
            android:text="@string/savebutton"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/rulesaddedit_donebutton"
            style="@style/actionbutton"
            android:layout_weight="18"
            android:text="@string/donebutton"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="62"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/inputstockshop_linearlayout"
        style="@style/standard_linearlayout"
        >
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/inputstockshop_label"
            style="@style/inputitemlabel_primary"
            android:layout_weight="16"
            android:text="@string/shoplabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <Spinner
            android:id="@+id/selectstockshop"
            style="@style/spinner_selector"
            android:layout_weight="80"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/inputstockaisle_linearlayout"
        style="@style/standard_linearlayout"
        >
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/inputstockaisle_label"
            style="@style/inputitemlabel_primary"
            android:layout_weight="16"
            android:text="@string/aislelabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <Spinner
            android:id="@+id/selectstockaisle"
            style="@style/spinner_selector"
            android:layout_weight="80"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/stock_productfilter_linearlayout"
        style="@style/standard_linearlayout"
        >
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/products_inputfilterlabel"
            style="@style/inputitemlabel"
            android:layout_weight="16"
            android:text="@string/filterlabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <EditText
            android:id="@+id/products_inputfilter"
            style="@style/inputitem"
            android:layout_weight="80"
            android:inputType="textNoSuggestions"
            android:hint="@string/empty"
            android:autofillHints="@string/empty"
            tools:targetApi="o" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/inputstockproduct_linearlayout"
        style="@style/standard_linearlayout"
        >
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/inputstockproduct_label"
            style="@style/inputitemlabel_primary"
            android:layout_weight="16"
            android:text="@string/productlabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <Spinner
            android:id="@+id/selectstockproduct"
            style="@style/spinner_selector"
            android:layout_weight="80"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/inputruleitems"
        style="@style/standard_linearlayout"
        >
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/inputrulename_label"
            style="@style/inputitemlabel_primary"
            android:layout_weight="16"
            android:text="@string/rulelabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <EditText
            android:id="@+id/inputrulename"
            style="@style/inputitem"
            android:layout_weight="80"
            android:inputType="text"
            android:hint="@string/empty"
            android:autofillHints="@string/empty"
            tools:targetApi="o" />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/inputruleitems_numbertoget"
        style="@style/standard_linearlayout"
        >
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/inputrulenumbertoget_label"
            style="@style/inputitemlabel_primary"
            android:layout_weight="16"
            android:text="@string/numbertogetlabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <EditText
            android:id="@+id/inputrulenumbertoget"
            style="@style/inputitem_order"
            android:layout_weight="8"
            android:hint="@string/empty"
            android:autofillHints="@string/empty"
            tools:targetApi="o" />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="24"
            />

        <TextView
            android:id="@+id/inputprompt_label"
            style="@style/inputitemlabel_primary"
            android:layout_weight="16"
            android:text="@string/promptlabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <CheckBox
            android:id="@+id/inputruleprompt"
            style="@style/checkbox"
            android:layout_weight="8"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="22"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/standard_linearlayout"
        >
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/inputruledatelabel"
            style="@style/inputitemlabel_primary"
            android:layout_weight="16"
            android:text="@string/ruledatelabel"/>
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/inputruledate"
            style="@style/listviewrowactionbutton"
            android:layout_weight="28"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <EditText
            android:id="@+id/inputtextruledate"
            style="@style/inputitem"
            android:layout_weight="16"
            android:inputType="date"
            android:hint="@string/empty"
            android:autofillHints="@string/empty"
            tools:targetApi="o" />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="32"
            android:text="@string/ruledateextrainfo"
            android:layout_height="match_parent"
            android:textStyle="italic"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
    </LinearLayout>
    <LinearLayout
            style="@style/standard_linearlayout"
            >
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/selectruleperiodlabel"
            style="@style/inputitemlabel_primary"
            android:layout_weight="16"
            android:text="@string/ruleperiodlabel"/>
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <Spinner
            android:id="@+id/selectruleperiod"
            style="@style/spinner_selector"
            android:layout_weight="24"
            >
        </Spinner>
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/inputrulemultiplierlabel"
            style="@style/inputitemlabel_primary"
            android:layout_weight="16"
            android:text="@string/rulemultiplierlabel"/>
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <EditText
            android:id="@+id/inputrulemultiplier"
            style="@style/inputitem_order"
            android:layout_weight="8"
            android:hint="@string/empty"
            android:autofillHints="@string/empty"
            tools:targetApi="o" />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="28"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/standard_linearlayout">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rulesaddedit_rulelist_heading"
        style="@style/listview_heading_standard"
        >
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/rules_rulelist_heading_rulename"
            style="@style/listview_heading_col_standard"
            android:layout_weight="24"
            android:text="@string/rulelabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/rules_rulelist_heading_productname"
            style="@style/listview_heading_col_standard"
            android:layout_weight="34"
            android:text="@string/productnamelabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/rules_rulelist_heading_acton"
            style="@style/listview_heading_col_standard"
            android:layout_weight="24"
            android:text="@string/actonlabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/rules_rulelist_heading_prompt"
            style="@style/listview_heading_col_standard"
            android:layout_weight="10"
            android:text="@string/promptlabel"
            />
    </LinearLayout>
    <include layout="@layout/common_listviewoptions"></include>
    <ListView
        android:id="@+id/rules_rulelist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </ListView>
</LinearLayout>