<?xml version="1.0" encoding="utf-8"?>
<!--suppress CheckTagEmptyBody -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/colourswatch"></include>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >
        <TextView
            android:id="@+id/aisles_messagebar"
            style="@style/messagebar"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/actions"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        >
        <TextView
            android:id="@+id/aisles_donebutton"
            android:layout_weight="18"
            style="@style/actionbutton"
            android:text="@string/donebutton"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/aisles_newaislebutton"
            android:layout_weight="18"
            style="@style/actionbutton"
            android:text="@string/addbutton"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="62"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/aisles_shopspinner_heading"
        style="@style/listview_heading_standard">
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/aisles_shopspinner_shopname_label"
            style="@style/inputitemlabel_primary"
            android:layout_weight="16"
            android:text="@string/shoplabel"
            />
        <TextView
            style="@style/inputitemdummy"
            android:layout_weight="2"
            />
        <Spinner
            android:id="@+id/aisles_shopspinner"
            style="@style/spinner_selector"
            android:layout_weight="80"
            android:layout_height="wrap_content"
            >
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/aisles_aislelist_heading"
        style="@style/listview_heading_standard"
        >
        <TextView
            style="@style/listview_heading_col_standard"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/aisles_aislelist_heading_aislename"
            style="@style/listview_heading_col_standard"
            android:layout_weight="86"
            android:text="@string/aisleslabel"
            />
        <TextView
            style="@style/listview_heading_col_standard"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/aisles_aislelist_heading_aisleorder"
            style="@style/listview_heading_col_standard"
            android:layout_weight="8"
            android:text="@string/orderlabel"
            />
        <TextView
            style="@style/listview_heading_col_standard"
            android:layout_weight="2"
            />
    </LinearLayout>
    <include layout="@layout/common_listviewoptions"></include>
    <ListView
        android:id="@+id/aisles_aislelist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </ListView>
</LinearLayout>